import java.io.BufferReader;
impport java.io.IOException;
import java.io.InputSrtreamReader

public class seleniumJira {
public static void main(String[] args ) throws IOException{
final String POST_PARAMS = "{\r\n"+
				"\"JiraStatus\": \"Pass\",\r\n" +
				"\"JiraDomain\": \"prashantsharma.atlassian.net\",\r\n" +
				"\"JirauserName\": \"prashant.sharma51@infosys.com\",\r\n"+
				"\"JiraPassword\": \"7vqKBfXA39Qxx8P1kIgeA1EA\",\r\n"+
				"\"Issuekey\": \"IN-1\",\r\n"+
				"}";
        System.out.println(POST_PARAMS);
		
		URL obj = new URL("https://prashantsharma.atlassian.net/jira/software/projects/FIR/boards/1");
		HttpURLConnection postConnection = (HttpURLConnection) obj.openConnection();
		postConnection.setRequestMethod("PUT");
		postConnection.setRequestProperty("prashant.sharma51@infosys.com", "7vqKBfXA39Qxx8P1kIgeA1EA");
		postConnection.setRequestProperty("Content-Type", "application/json");
		postConnection.setDoOutput(true);
    
   OutputStream os = postConnection.getOutputStream();
		os.write(POST_PARAMS.getBytes());
		os.flush();
		os.close();
    int responseCode = postConnection.getResponseCode();
		System.out.println("POST response code :"+ responseCode);
		System.out.println("POST response message :"+ postConnection.getResponseMessage());
		if(responseCode ==HttpURLConnection.HTTP_CREATED) {
			BufferedReader in = new BufferedReader(new InputStreamReader(
					postConnection.getInputStream()));
			String inputLine;
      StringBuffer response = new StringBuffer();
			while ((inputLine = in .readLine())!= null) {
				response.append(inputLine);
			}in .close();
			System.out.println(response.toString());
		}else {
			System.out.println("POST NOT WORKED");
		}
    }
    }
